<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/accent_v3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rname"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/prime"
                android:textSize="16dp"
                android:text="Reservation 1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/time"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:src="@drawable/res_1"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/end_time"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:src="@drawable/res_1"/>
                <TextView
                    android:id="@+id/end_time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/booked_at"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:src="@drawable/res_4"/>
                <TextView
                    android:id="@+id/book_at"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/res_3"/>
                <TextView
                    android:id="@+id/emp_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/res_5"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>