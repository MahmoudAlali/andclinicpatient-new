<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activities.BrideServicesSelecting">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primedark"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title="اختيار الخدمات"
        app:titleTextColor="#fff" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/service_select_re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></android.support.v7.widget.RecyclerView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:textSize="@dimen/standard_20"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المجموع:"
            android:layout_weight="1"
            android:textSize="@dimen/standard_20"
            android:gravity="center"

            />
    </LinearLayout>

    <Button
        android:layout_weight="11"
        android:id="@+id/reserv_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="حجز"
        android:textColor="#fff"
        android:background="@color/primedark"
        android:textSize="@dimen/standard_20"
        />

</LinearLayout>

    </LinearLayout>




</LinearLayout>