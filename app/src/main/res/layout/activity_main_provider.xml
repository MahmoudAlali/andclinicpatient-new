<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Activities.ProviderSerAndOfferPKG.MainProviderActivity">
    <ImageView
        android:visibility="gone"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textAlignment="center"
            />
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/salon_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:text="@string/salonName"
            android:textSize="16sp"
            android:textColor="#000"
            android:gravity="start|center"
            />

        <ImageView
            android:id="@+id/centerFavorite"
            android:layout_width="40dp"
            android:src="@drawable/un_favorite"
            android:padding="9dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="8dp"
            android:id="@+id/location"
            android:layout_width="40dp"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/health"
            android:layout_width="@dimen/standard_30"
            android:layout_height="35dp"
            android:textColor="#000"
            android:textAlignment="center"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="7"
        android:id="@+id/featuresLine1"
        android:orientation="horizontal"
        >
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature5"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature6"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature7"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/featuresLine2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="7"
        android:orientation="horizontal"
        >
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature8"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature9"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature10"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature11"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature12"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature13"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/feature14"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/service_place_icon"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_50"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/filter_location_shape"
            android:layoutDirection="ltr"
            >
            <TextView
                android:id="@+id/my_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                android:text="@string/MyLocation"
                android:textSize="14dp"
                android:maxWidth="110dp"
                android:textColor="#000"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/filter_my_location_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_50"
            android:layout_marginLeft="10dp"
            android:layoutDirection="ltr"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filter_date_shape"
            android:gravity="end">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                android:textSize="14dp"
                android:textColor="#000"                android:text="@string/date"
                android:gravity="center"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/filter_date_icon"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#8E8D8D"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/service_Sw"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/doctors"
            android:textColor="#000"
            android:background="@drawable/shadow_service_tab"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/offer_sw"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000"
            android:text="@string/Offers" />
        <TextView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12dp"
            android:text="@string/healthCntrPix" />


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fra"
        android:orientation="vertical"
        >


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>