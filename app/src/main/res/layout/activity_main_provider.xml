<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ProviderSerAndOfferPKG.MainProviderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_50"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/filter_location_shape"
            android:layoutDirection="ltr"
            >
            <TextView
                android:id="@+id/my_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                android:text="@string/MyLocation"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/filter_my_location_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_50"
            android:layout_marginLeft="10dp"
            android:layoutDirection="ltr"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filter_date_shape"
            android:gravity="end">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/date"
                android:gravity="center"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="@dimen/standard_50"
                android:layout_height="match_parent"
                android:src="@drawable/filter_date_icon"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/black"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/service_Sw"
            android:layout_width="200dp"
            android:layout_height="@dimen/high_button"
            android:text="@string/service"
            android:background="@drawable/shadow_service_tab"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/offer_sw"
            android:layout_width="200dp"
            android:layout_height="@dimen/high_button"
            android:gravity="center"
            android:text="@string/Offers" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>