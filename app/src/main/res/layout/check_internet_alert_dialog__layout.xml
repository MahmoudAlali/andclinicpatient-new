                <!--android:text="إعادة ارسال الرمز"-->
                <!--android:textSize="15dp"-->
                <!--android:textColor="@android:color/holo_red_dark"-->
                <!--/>-->
        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
