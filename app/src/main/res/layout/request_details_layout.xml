<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/end_gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@string/Backicon"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="#fff" />
    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_weight="1"
                >
                <android.support.design.widget.CoordinatorLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/service_place_icon"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/salonName"
                            android:gravity="center"
                            android:textColor="#a5587a"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/salon_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Value"
                            android:textColor="#a5587a"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="end|center"
                        >
                        <android.support.v7.widget.CardView
                            android:id="@+id/myCardView"
                            android:layout_width="@dimen/standard_40"
                            android:layout_height="@dimen/standard_40"
                            app:cardCornerRadius="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >

                            <ImageView
                                android:id="@+id/logoImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/logo" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.design.widget.CoordinatorLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<!--                    <TextView-->
<!--                        android:id="@+id/book_type"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="center"-->
<!--                        android:text="@string/ordered_type"-->
<!--                        android:textSize="18dp"-->
<!--                        android:textStyle="bold" />-->
                    <TextView
                        android:id="@+id/date"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:text="type"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/pf_5dp_space"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/s_name"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/salonName"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:src="@drawable/ic_call_black_24dp"
                        />
                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:text="@string/Phone_Number"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#a5587a"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/pf_5dp_space"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/ordered_on"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:src="@drawable/booked_at_icon"
                        />
                    <TextView
                        android:id="@+id/order_on"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:text=""
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/pf_5dp_space"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/executing_order"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:src="@drawable/booked_at_icon"
                        />
                    <TextView
                        android:id="@+id/exec_order"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:text=""
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/pf_5dp_space"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/cost"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:src="@drawable/reser_money_icon"
                        />
                    <TextView
                        android:id="@+id/total_price"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:text="TotalPrice"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/ac_total_price"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_edit_text"
                android:text=""
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/pf_5dp_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Service_Place"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_40"
                    android:layout_height="35dp"
                    android:src="@drawable/service_place_icon"
                    />
                <TextView
                    android:id="@+id/place"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="Value"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/pf_5dp_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/order_id"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_40"
                    android:layout_height="35dp"
                    android:src="@drawable/reser_count_icon"
                    />
                <TextView
                    android:id="@+id/id"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="Value"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


