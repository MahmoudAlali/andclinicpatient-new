        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_50"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_marginStart="5dp"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        android:id="@+id/place"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location_on_black_24dp"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginEnd="7dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_stars"

                            />
                        <!--<RatingBar
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:id="@+id/service_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:rating="1"
                            android:clickable="false"
                            android:numStars="1" />-->

                    </LinearLayout>
                    <TextView
                        android:gravity="start|center"
                        android:id="@+id/provider_rate"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0.0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="4"
                        android:id="@+id/featuresLine1"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature1"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature2"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature3"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature4"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>



                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/featuresLine2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature5"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature6"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature7"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/feature8"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/service_place_icon"
                            android:layout_height="match_parent"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/add_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:src="@drawable/add_request" />


        </LinearLayout>

    </LinearLayout>


    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>

