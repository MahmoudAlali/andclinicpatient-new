<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/offer_shape3"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:weightSum="3"
                >



                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_marginStart="5dp"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/place"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location_on_black_24dp"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginEnd="7dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_stars"

                            />
                        <!--<RatingBar
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:id="@+id/service_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:rating="1"
                            android:clickable="false"
                            android:numStars="1" />-->

                    </LinearLayout>
                    <TextView
                        android:gravity="start|center"
                        android:id="@+id/provider_rate"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0.0"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/healthCntr"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:text="Provider"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/centerFavorite"
                        android:src="@drawable/un_favorite"
                        android:layout_width="25dp"
                        android:layout_marginEnd="@dimen/standard_20"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/myCardView"
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        app:cardCornerRadius="50dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/transparent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        >
                        <ImageView
                            android:id="@+id/logoImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            />
                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       >
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:text="@string/doctorName"
                           android:textStyle="bold"
                           android:textAlignment="viewEnd"
                           />
                       <TextView
                           android:id="@+id/service_name"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textAlignment="viewStart"
                           android:paddingRight="5dp"
                           android:paddingLeft="5dp"
                           android:text="hgjs;jdg"
                           android:paddingBottom="2dp"
                           android:textStyle="bold"
                           />
                   </LinearLayout>

                   <TextView
                       android:id="@+id/speciality"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:textStyle="bold"
                       android:paddingRight="5dp"
                       android:paddingLeft="5dp"
                       android:textAlignment="center"
                       android:text="hgjs;jdg"
                       android:paddingTop="2dp"
                       />
               </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/doctorFavorite"
                        android:src="@drawable/un_favorite"
                        android:layout_width="25dp"
                        android:layout_marginEnd="@dimen/standard_20"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/exp"
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:textColor="#000"
                        android:src="@drawable/ic_experience_care"
                        android:textAlignment="center"
                        />
                    <Space
                        android:layout_width="@dimen/pf_10dp_space"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/health"
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:textColor="#000"
                        android:src="@drawable/ic_health_care"
                        android:textAlignment="center"
                        />
                    <Space
                        android:layout_width="@dimen/pf_10dp_space"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/depPerc"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_margin="8dp"
                    android:id="@+id/add_request"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/add_request" />


            </LinearLayout>

        </LinearLayout>

      <!--  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/provider_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="provider name"/>

        </LinearLayout>-->

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>

