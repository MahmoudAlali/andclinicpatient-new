<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shadow_gray_dialog"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_20"
            android:gravity="center"
            android:text="@string/wanted_time2"
            android:textColor="@color/greenClinic"
            android:textStyle="bold"
            android:textSize="@dimen/standard_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/standard_20"
            android:background="@color/requestItemBack"
            android:orientation="horizontal">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/add_service"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textAlignment="center">

            </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

            <EditText
                android:visibility="gone"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_edit_text"
                android:layout_weight="1"
                android:background="@drawable/shadow_edit_text"
                android:gravity="center"
                android:hint="Enter Name" />



        </LinearLayout>
        <TextView
            android:id="@+id/medical_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/med_id2"
            android:textColor="@color/lightBlueClinic"
            android:textStyle="bold"
            android:textSize="16dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:layout_gravity="bottom"
            >
            <Button
                android:id="@+id/search"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_button"
                android:background="@drawable/light_blue_button"
                android:textSize="@dimen/standard_20"
                android:text="@string/search"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:elevation="5dp"/>
            <Button
                android:id="@+id/cancel"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_button"
                android:background="@drawable/red_button"
                android:textSize="@dimen/standard_20"
                android:text="@string/cancel"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:elevation="5dp"/>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>