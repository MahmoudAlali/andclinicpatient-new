<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:background="@drawable/blue_offer_background_ar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pf_5dp_space"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/red"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/book_ser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/plus_shape"/>
        <Space
            android:layout_width="@dimen/standard_20"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:id="@+id/salon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:text=""
        android:textColor="@color/red"
        android:textSize="18dp" />
    <TextView
        android:layout_marginLeft="@dimen/standard_20"
        android:layout_marginRight="@dimen/standard_20"
        android:id="@+id/service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text=""
        android:textSize="18dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_marginBottom="@dimen/pf_10dp_space"
        android:orientation="horizontal">
        <Space
            android:layout_width="@dimen/standard_30"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/emp_name"
            android:textColor="@color/prime"
            android:textSize="18dp" />
    <TextView
        android:id="@+id/employee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/prime"
        android:textSize="18dp" />
        <Space
            android:layout_width="@dimen/standard_30"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_marginBottom="@dimen/pf_10dp_space"
        android:orientation="horizontal">
        <Space
            android:layout_width="@dimen/standard_30"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/prime"
            android:text="@string/Servicr_Time"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/prime"
            android:gravity="center"
            android:text=""
            android:textSize="18dp" />
        <Space
            android:layout_width="@dimen/standard_30"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>

