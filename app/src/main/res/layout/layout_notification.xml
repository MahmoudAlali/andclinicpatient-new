<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/notification"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/shadow_edit_text3"
        android:weightSum="6"
        android:layout_height="130dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:weightSum="3"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/notif_title"
                android:layout_width="match_parent"
                android:text="Title"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/endblue"
                android:layout_height="@dimen/high_edit_text" />
            <ImageView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="6dp"

                android:src="@drawable/ic_notifications_black_24dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/notif_body"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="Body"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/notif_date"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:text="date"
            android:gravity="start|bottom"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="2"
        android:visibility="gone"
        android:layout_height="match_parent">

        <TextView
            android:background="@color/lightBordeaux"
            android:id="@+id/action1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="Action 1"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/lightBordeaux"
            android:id="@+id/action2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="Action 2"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="20dp"
        android:layout_height="match_parent" />





</LinearLayout>
