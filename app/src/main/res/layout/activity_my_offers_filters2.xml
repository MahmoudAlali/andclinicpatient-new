                                android:text="@string/requestType"
                                android:gravity="center"
                                android:textAlignment="center"/>

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/filter_my_location_icon" />

                        </LinearLayout>
            -->
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:layoutDirection="ltr"
                >
                <TextView
                    android:id="@+id/my_location"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_blue_back"
                    android:src="@drawable/location_filter" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/distance"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_green_back"
                    android:src="@drawable/distance_filter" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/service_rate"
                    android:text="@string/centerRate"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_red_back"
                    android:src="@drawable/rating_filter"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layoutDirection="ltr"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/providerName"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/providerName"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_grey_back"
                    android:src="@drawable/center_name_filter" />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layoutDirection="ltr"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/service_place"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/services"
                    android:gravity="center"
                    android:textAlignment="center"/>

<!--                <ImageView-->
<!--                    android:layout_width="58dp"-->
<!--                    android:paddingBottom="1dp"-->
<!--                    android:paddingTop="1dp"-->
<!--                    android:src="@drawable/services"-->
<!--                    android:padding="8dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@drawable/filter_blue_back"-->
<!--                     />-->

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layoutDirection="ltr"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/service_exec_date"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/offer_date"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:src="@drawable/filter_date_icon"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_green_back"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layoutDirection="ltr"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/service_price"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/OfferPrice"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_red_back"
                    />

            </LinearLayout>

        </LinearLayout>
        <!--
                    </android.support.v4.widget.NestedScrollView>
        -->

    </LinearLayout>


    <Button
        android:id="@+id/ok"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/standard_20"
        android:layout_marginRight="@dimen/standard_20"
        android:text="@string/search"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/light_blue_button"
        />
</android.support.design.widget.CoordinatorLayout>