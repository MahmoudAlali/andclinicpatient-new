        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <Button
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_button"
                android:textSize="@dimen/standard_20"
                android:background="@drawable/shadow_button_spinner2"

                android:text="@string/filter"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"/>
            <Button
                android:id="@+id/clear"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_button" android:textSize="@dimen/standard_20"
                android:background="@drawable/shadow_button_blue"
                android:text="@string/removeFilter"
                android:textAllCaps="false"
                android:textColor="#FFF"/>

        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>