<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@drawable/offer_shape3"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="7dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:gravity="top"
                android:weightSum="3">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/place"
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginEnd="7dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_stars"

                            />
                        <!--<RatingBar
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:id="@+id/service_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:rating="1"
                            android:clickable="false"
                            android:numStars="1" />-->

                    </LinearLayout>
                    <TextView
                        android:gravity="start|center"
                        android:id="@+id/provider_rate"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0.0"
                        />
                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/service_name"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingStart="4dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="4dp" />

            </LinearLayout>


            <LinearLayout
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <ImageView
                    android:id="@+id/exp"
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:textColor="#000"
                    android:textAlignment="center"
                    />
                <Space
                    android:layout_width="@dimen/pf_10dp_space"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/health"
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:textColor="#000"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:id="@+id/depPerc"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text=""
                    />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/service_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Price"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <RatingBar
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:layout_weight="1"
                                android:id="@+id/service_rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:numStars="5" />
                        </LinearLayout>
            -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="5dp">



                <ImageView
                    android:padding="3dp"
                    android:id="@+id/service_fav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/favorite" />

                <ImageView
                    android:id="@+id/service_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/plus_shape" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/logoImg"
                        android:src="@drawable/logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/provider_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="provider name"/>

        </LinearLayout>

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>

