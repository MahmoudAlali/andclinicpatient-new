<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:background="@drawable/offer_shape3"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Provider"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"

                android:id="@+id/service_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Price"
                android:textSize="15dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RatingBar
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:layout_weight="1"
                    android:id="@+id/service_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:numStars="5" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="5dp">


                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/service_compare"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/pf_12_txt_size"
                    android:layout_height="match_parent"
                    android:text="@string/Compare2"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_margin="8dp"
                    android:id="@+id/service_fav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/favorite" />

                <ImageView
                    android:id="@+id/service_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/plus_shape" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="@dimen/standard_60"
                    android:layout_height="@dimen/standard_60"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:id="@+id/logoImg"
                        android:src="@drawable/logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/provider_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="provider name"/>

        </LinearLayout>

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>

