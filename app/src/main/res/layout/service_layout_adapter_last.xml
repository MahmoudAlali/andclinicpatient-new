<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:background="@drawable/offer_shape3"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="7dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:weightSum="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginEnd="7dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp">

                        <ImageView
                            android:id="@+id/place"
                            android:layout_width="@dimen/standard_40"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_on_black_24dp" />


                        <Space
                            android:layout_width="@dimen/pf_5dp_space"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_stars"

                            />
                        <!--<RatingBar
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:id="@+id/service_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:rating="1"
                            android:clickable="false"
                            android:numStars="1" />-->
                        <Space
                            android:layout_width="@dimen/pf_5dp_space"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:gravity="start|center"
                            android:id="@+id/provider_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0.0"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/service_name"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center"
                    android:paddingStart="4dp"
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="4dp" />

            </LinearLayout>


            <LinearLayout
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <TextView
                    android:layout_gravity="end|center"
                    android:gravity="end"
                    android:id="@+id/depPerc"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/service_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Price"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
<!--
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RatingBar
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:layout_weight="1"
                    android:id="@+id/service_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:numStars="5" />
            </LinearLayout>
-->


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="6dp"
                android:layout_marginLeft="5dp">


                <CheckBox
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:id="@+id/service_compare"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/pf_12_txt_size"
                    android:layout_height="match_parent"
                    android:text="@string/Compare2"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_margin="8dp"
                    android:id="@+id/service_fav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/favorite" />

                <ImageView
                    android:id="@+id/service_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/plus_shape" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="@dimen/standard_60"
                    android:layout_height="@dimen/standard_60"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:id="@+id/logoImg"
                        android:src="@drawable/logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/provider_name"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="provider name"/>

        </LinearLayout>

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>

