<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:weightSum="5"
    android:layout_marginRight="@dimen/pf_10dp_space"
    android:layout_marginLeft="@dimen/pf_10dp_space"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:id="@+id/listTitle"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:background="@drawable/shadow_edit_text2"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_40">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:src="@drawable/ic_add_black_24dp"
        android:gravity="center"
        android:padding="7dp"
        />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/location"
        android:layout_width="@dimen/standard_50"
        android:layout_height="@dimen/standard_40"
        android:textColor="@android:color/black"
        android:src="@drawable/ic_location_on_black_24dp"
        android:gravity="center"
        android:padding="7dp"
        />
        <Space
            android:layout_width="@dimen/pf_5dp_space"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/place"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text=""
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/bdb_expected_deposit"
            android:textSize="17dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
