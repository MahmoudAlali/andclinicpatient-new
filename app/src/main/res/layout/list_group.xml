<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:weightSum="5"
    android:layout_marginRight="@dimen/pf_10dp_space"
    android:id="@+id/listTitle"
    android:layout_marginLeft="@dimen/pf_10dp_space"
    android:layout_marginTop="@dimen/standard_20"
    android:background="@drawable/shadow_edit_text2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:id="@+id/listTitle2"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="fjfjjj"
        android:layout_gravity="center"
         />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        >

    <ImageView
        android:layout_weight="1"
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@android:color/black"
        android:src="@drawable/add_offer_new"
        android:padding="3dp"
        android:gravity="center"
        />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/costDetails"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="14dp"
        android:text="cost details"
        android:layout_gravity="center"
        android:gravity="center"/>


    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/location"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textColor="@android:color/black"
        android:src="@drawable/pro_loc_icon_new"
        android:gravity="center"
        android:padding="3dp"
        />
        <Space
            android:layout_width="@dimen/pf_5dp_space"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/place"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/reser_location"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/bdb_expected_deposit"
            android:textSize="16dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
