<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greenClinic"
            >
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/c_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/redClinic"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/ClientDetails"/>
                <TextView
                    android:id="@+id/c_old"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/redClinic"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/ClientDetails"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/med_id2"/>
                <TextView
                    android:id="@+id/medical_id"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/med_id2"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/speciality"/>
                <TextView
                    android:id="@+id/speciality"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/speciality"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/doctorName"/>
                <TextView
                    android:id="@+id/doctorName"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/doctorName"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/wanted_time"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/time"/>


            </LinearLayout>

            <TextView
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/client_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="@string/ClientDetails"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>