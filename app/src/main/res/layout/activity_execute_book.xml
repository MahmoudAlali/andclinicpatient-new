<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ExecuteBookActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/standard_20"
        android:paddingRight="@dimen/standard_20"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/autoJrCost"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/standard_20"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/rootLayout"
            >

        </LinearLayout>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_button"
            android:layout_gravity="center"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ok_button"
            android:elevation="5dp"
            android:text="@string/OK"
            android:textColor="@color/endblue" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>