<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/standard_30"
    android:layout_marginRight="@dimen/standard_30"    android:layout_height="wrap_content"
    android:background="@drawable/shadow_dialog"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="@string/logOutAllDevices"
                android:textSize="15dp" />
        </LinearLayout>




        <!--<EditText-->
        <!--android:id="@+id/code"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/high_edit_text"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:background="@drawable/shadow_edit_text"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:hint="code"-->
        <!--android:gravity="center"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_gravity="center"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/end_gray"/>
        <LinearLayout
            android:layout_weight="2"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/logoutAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:text="@string/AllDevices"
                    android:gravity="center"
                    android:textColor="@color/endblue"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/end_gray"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/logoutExceptMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"                    android:layout_gravity="bottom|center"
                    android:gravity="center"
                    android:text="@string/AllDevicesNotMe"
                    android:textSize="14dp"
                    android:textColor="@color/endblue"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/end_gray"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/dont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"                    android:layout_gravity="bottom|center"
                    android:gravity="center"
                    android:text="@string/DontLogout"
                    android:textSize="14dp"
                    android:textColor="@color/endblue"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
