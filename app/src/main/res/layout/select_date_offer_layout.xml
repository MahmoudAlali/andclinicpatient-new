<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_margin="5dp"
    android:background="@drawable/shadow_gray_lite_dialog"
    >

    <android.support.design.widget.CoordinatorLayout
        android:background="@drawable/shadow_button_blue_lite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/high_edit_text">
        <LinearLayout
            android:id="@+id/select_date"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/high_edit_text"
                android:layout_height="@dimen/high_edit_text"
                android:src="@drawable/res_4"
                />
            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <TextView

                android:layout_gravity="center"
                android:id="@+id/select_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Date"
                />

        </LinearLayout>



    </android.support.design.widget.CoordinatorLayout>




    <TextView
        android:layout_gravity="center"
        android:id="@+id/service_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_edit_text"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Name"
        />



</LinearLayout>