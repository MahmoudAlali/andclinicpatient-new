<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shadow_gray_dialog"
   android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">


        <CheckBox
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="السعر"
            android:gravity="center"
            android:textSize="@dimen/standard_20"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
       />



        <CheckBox
            android:id="@+id/rate_service"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تقييم الخدمة"
            android:gravity="center"
            android:textSize="@dimen/standard_20"
            android:textColor="#000"
            android:layout_marginBottom="5dp"

            />
        <CheckBox
            android:id="@+id/rate_provoder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تقييم المزودة"
            android:gravity="center"
            android:textSize="@dimen/standard_20"
            android:textColor="#000"
            android:layout_marginBottom="5dp"

            />
        <CheckBox
            android:id="@+id/far"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="البعد"
            android:gravity="center"
            android:textSize="@dimen/standard_20"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            />
        <CheckBox
            android:id="@+id/activeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="التاريخ النشط"
            android:gravity="center"
            android:textSize="@dimen/standard_20"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            />
        <CheckBox
            android:id="@+id/discountVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نسبة الخصم المئوية"
            android:gravity="center"
            android:textSize="@dimen/standard_20"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_button"
            android:background="@drawable/shadow_button_blue"
            android:textSize="@dimen/standard_20"
            android:text="فلترة"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_button"
            android:background="@drawable/shadow_button_spinner"
            android:textSize="@dimen/standard_20"
            android:text="ازالة جميع عناصر الفلترة"
            android:textColor="#FFF"/>

    </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>