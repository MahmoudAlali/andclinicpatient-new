<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/pf_10dp_space"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/pf_10dp_space"
    android:layout_marginLeft="@dimen/pf_10dp_space"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/shadow_place_layout2"
    android:layout_marginBottom="10dp"

    android:orientation="horizontal"
    >
    <ImageView
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hair_basic"
        android:id="@+id/categoryImg"/>
    <TextView
        android:id="@+id/categoryName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:textColor="#fff"
        android:text="category name"
        android:textStyle="bold"
        android:textSize="22sp"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryItems"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >




    </LinearLayout>

