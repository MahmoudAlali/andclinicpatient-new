<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".Activities.MapFiltering"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/end_gray"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title=""
        app:titleTextColor="@color/end_gray"
        />
    <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/nscrolview"-->
        <!--android:layout_marginTop="?attr/actionBarSize"-->
        <!--android:layout_height="match_parent">-->



    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Spinner

            android:id="@+id/location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/search_map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_edit_text"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shadow_edit_text"
                android:gravity="center"
                android:hint="ابحثي عن عنوان او منطقة" />

            <Button
                android:id="@+id/search_map_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/high_edit_text"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"

                android:layout_weight="3"
                android:background="@drawable/shadow_button_blue"
                android:gravity="center"
                android:text="بحث"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="7">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical"></com.google.android.gms.maps.MapView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="6"
                android:orientation="vertical">

                <Button
                    android:id="@+id/add_loc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_button"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shadow_button_add_site"
                    android:text="اضافة" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/del_loc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_button"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_button_blue"
                        android:text="حذف موقع" />

                    <Button
                        android:id="@+id/edit_loc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_button"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_button_blue"
                        android:text="تعديل موقع" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>