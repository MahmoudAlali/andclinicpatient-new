<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/pf_10dp_space"
    android:background="@drawable/border_white"
    android:padding="3dp"
    android:layout_marginLeft="@dimen/pf_10dp_space"
    android:elevation="5dp"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/shadow_button_blue_lite"
        android:text="name"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/shadow_button_blue_lite"
        android:text="055637802"
        android:textColor="#FFF"
        android:textSize="18dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/pf_5dp_space"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/shadow_button_blue_lite"
        android:text="name"
        android:textColor="#FFF"
        android:textSize="18dp" >
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="27-9-2012"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#000"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="14:00"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#000"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/pf_10dp_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service 1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <TextView
            android:layout_marginTop="@dimen/pf_10dp_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service 2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            />
    </LinearLayout>




</LinearLayout>

