<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="7dp"
    android:layout_marginLeft="@dimen/standard_20"
    android:layout_marginRight="@dimen/standard_20"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/effect_name"
            android:background="@drawable/shadow_button_accent_lite_v2"
            android:layout_width="match_parent"
            android:text="text"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="35dp"></TextView>
        <HorizontalScrollView
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/dzereo"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="150dp">
                    <TextView
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:src="@drawable/pic2" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/d_one"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/textOne"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="@dimen/standard_80"
                        android:layout_height="@dimen/standard_80">

                        <ImageView
                            android:id="@+id/one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:src="@drawable/pic2" />


                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="@dimen/pf_5dp_space"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/dtwo"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/textTwo"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="@dimen/standard_80"
                        android:layout_height="@dimen/standard_80">


                        <ImageView
                            android:id="@+id/two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:src="@drawable/pic2" />


                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="@dimen/pf_5dp_space"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/dthree"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/textThree"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="@dimen/standard_80"
                        android:layout_height="@dimen/standard_80">

                        <ImageView
                            android:id="@+id/three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:src="@drawable/pic2" />


                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="@dimen/pf_5dp_space"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/dfour"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/textFour"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <LinearLayout

                        android:id="@+id/calLayout"
                        android:orientation="vertical"
                        android:layout_width="@dimen/standard_80"
                        android:layout_height="@dimen/standard_80">

                        <ImageView
                            android:id="@+id/four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:src="@drawable/pic2" />


                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="@dimen/pf_5dp_space"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/dfive"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="150dp">
                    <TextView
                        android:id="@+id/textFive"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_gravity="center"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="@dimen/standard_80"
                        android:layout_height="@dimen/standard_80">

                        <ImageView
                            android:id="@+id/five"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:src="@drawable/pic2" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
