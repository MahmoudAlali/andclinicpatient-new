<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/end_gray"
        app:navigationIcon="@string/Backicon"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title=""
        app:titleMarginStart="@dimen/standard_175"
        app:titleTextColor="@color/end_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/standard_80"
        android:orientation="vertical">

        <!--<android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="@dimen/standard_60"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:layoutDirection="ltr"
                >
                <TextView
                    android:id="@+id/nearestCenters"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/nearestCenters"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
                <ImageView
                    android:src="@drawable/distance_filter"
                    android:layout_width="58dp"
                    android:padding="8dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_grey_back"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="@dimen/standard_60"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:layoutDirection="ltr"
                >
                <TextView
                    android:id="@+id/my_location"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_blue_back"
                    android:src="@drawable/location_filter" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/grey"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="@dimen/standard_60"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/service_rate"
                    android:text="@string/centerRate"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_red_back"
                    android:src="@drawable/rating_filter"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="@dimen/standard_60"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/distance"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="58dp"
                    android:padding="8dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_green_back"
                    android:src="@drawable/distance_filter"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="@dimen/standard_60"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layoutDirection="ltr"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/offerPrice"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="@string/speciality"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_grey_back"
                    android:src="@drawable/speciality_filter"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layoutDirection="ltr"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/filter_background"
                android:gravity="end">
                <TextView
                    android:id="@+id/providerName"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/providerName"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="58dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_blue_back"
                    android:src="@drawable/center_name_filter"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/ok"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/standard_20"
        android:layout_marginRight="@dimen/standard_20"
        android:text="@string/search"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/light_blue_button"
        />
</android.support.design.widget.CoordinatorLayout>