    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"></LinearLayout>

    <android.support.design.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        style="@style/Widget.MaterialComponents.BottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:actionLayout="@layout/activity_compartion"
        app:backgroundTint="@color/primedark"
        app:fabAlignmentMode="center"
        app:fabCradleRoundedCornerRadius="16dp"
        app:menu="@menu/bar_menu3"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/offers"
            android:onClick="offers"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="offers"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_discount_white"
                android:layout_weight="1">

            </ImageButton>
                <TextView
                    android:id="@+id/offer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ابرز العروض"
                    android:gravity="center"
                    android:textColor="#fff"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/services"
                android:onClick="service"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageButton
                        android:onClick="service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_leaf"
                        android:layout_weight="1">

                    </ImageButton>
                    <TextView
                        android:id="@+id/service_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="الخدمات"
                        android:gravity="center"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reservation"
                android:onClick="reservation"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:onClick="reservation"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_booking"
                        android:layout_weight="1">

                    </ImageButton>

                    <TextView
                        android:id="@+id/reservation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="حجوزاتي"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account"
                android:onClick="account"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageButton
                        android:onClick="account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_account"
                        android:layout_weight="1">

                    </ImageButton>
                    <TextView
                        android:id="@+id/account_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="حسابي"
                        android:gravity="center"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>


