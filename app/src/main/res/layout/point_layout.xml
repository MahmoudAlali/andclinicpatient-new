<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/standard_20"
    android:layout_marginBottom="@dimen/standard_20"
    android:layout_height="@dimen/high_edit_text"
    android:weightSum="2"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/pointsDesc"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_edit_text"
        android:textSize="18dp"
        android:textColor="#000"

        android:textStyle="bold"
        android:elevation="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#000"
        android:text="Description"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/pointsDate"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_edit_text"
        android:textSize="18dp"
        android:textColor="#000"

        android:textStyle="bold"
        android:elevation="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#000"
        android:text="20-10-2019"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/pointsCount"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/high_edit_text"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:elevation="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="@color/red"
        android:text="100"
        android:gravity="center"
        />


    <ImageView
        android:id="@+id/pointsIcon"
        android:src="@drawable/down_arrow_icon"
        android:layout_width="@dimen/high_edit_text"
        android:layout_height="@dimen/high_edit_text" />

    <android.support.v4.widget.Space
        android:layout_width="20dp"
        android:layout_height="match_parent" />






</LinearLayout>



