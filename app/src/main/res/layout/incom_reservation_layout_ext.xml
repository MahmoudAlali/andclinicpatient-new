<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="20dp"
        android:gravity="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/bl"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/bl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/book_details"
                android:layout_width="@dimen/standard_50"
                android:layout_height="match_parent"
                android:src="@drawable/res_info"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/booktype"
                android:layout_width="match_parent"
                android:text="Type Booking"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/standard_60" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:text="Start Date"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/high_edit_text" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/client_name"
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/high_edit_text" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/total_price"
                android:layout_width="match_parent"
                android:text="Price"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/pf_red"
                android:layout_height="@dimen/high_edit_text" />
            <ImageView
                android:id="@+id/inner_res"
                android:layout_width="@dimen/high_edit_text"
                android:layout_height="match_parent"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/booking_place"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="Place"
            android:gravity="center"
            android:textSize="20dp"
            />
        <hyogeun.github.com.colorratingbarlib.ColorRatingBar
            android:id="@+id/rating"
            android:layout_width="240dp"
            android:layout_height="@dimen/standard_40"
            android:numStars="5"
            android:layout_gravity="center"
            app:progress_color="#FFD700"
            app:empty_color="@color/gray"
            android:scaleX="0.5"
            android:scaleY="0.5"

            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/pi"
            android:id="@+id/time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="@string/edit"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/delay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pi"
            android:gravity="center"
            android:text="@string/Delay"
            android:textColor="#000"
            android:textSize="20dp" />

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/pi"
            android:id="@+id/refuse"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="6"

        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
