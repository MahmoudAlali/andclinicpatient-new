<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#8AA6BE"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/shadow_button_blue_lite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/book_details"
                android:layout_width="@dimen/standard_50"
                android:layout_height="match_parent"
                android:src="@drawable/ic_info_black_24dp"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/booktype"
                android:layout_width="match_parent"
                android:text="Type Booking"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/high_edit_text" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:text="Start Date"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/high_edit_text" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/high_edit_text" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/total_price"
                android:layout_width="match_parent"
                android:text="Price"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/pf_red"
                android:layout_height="@dimen/high_edit_text" />
            <ImageView
                android:layout_width="@dimen/high_edit_text"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/booking_place"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="Place"
            android:gravity="center"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/prime"
            android:id="@+id/accept"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="@string/edit"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/prime"
            android:id="@+id/refuse"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Delay"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/prime"
            android:id="@+id/edit_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="6"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/prime"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="@string/Evaluation"
            android:textColor="@color/pf_light_yellow"
            android:textSize="20dp"
            android:gravity="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <!--<TextView-->
            <!--android:background="@color/prime"-->
            <!--android:id="@+id/refuse"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="@string/Delay"-->
            <!--android:textSize="20dp"-->
            <!--android:gravity="center"-->
            <!--/>-->
        <!--<android.support.v4.widget.Space-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="match_parent" />-->
        <TextView
            android:background="@color/prime"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/export_invoice"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/myroot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>
