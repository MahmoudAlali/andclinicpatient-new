<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="16dp"
        android:gravity="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/automated_browse_back"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/book_details"
                android:padding="3dp"
                android:layout_width="@dimen/standard_50"
                android:layout_height="match_parent"
                android:src="@drawable/res_info"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/booktype"
                android:layout_width="match_parent"
                android:text="Booking type"
                android:lines="1"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_height="@dimen/standard_45" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:text="Start Date"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#133277"
                android:textStyle="bold"
                android:layout_height="@dimen/high_edit_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                >
                <!--                <android.support.v7.widget.CarView-->
                <!--                    android:id="@+id/myCardView"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:cardCornerRadius="50dp"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    >-->
                <ImageView
                    android:id="@+id/logoImg"
                    android:src="@drawable/clientlogo"
                    android:layout_width="@dimen/standard_40"
                    android:layout_height="@dimen/standard_40"
                    android:scaleType="centerCrop"
                    />
                <!--                </android.support.v7.widget.CarView>-->


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/client_name"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#a5587a"
                        android:layout_height="@dimen/high_edit_text" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="90dp"
                        android:layout_marginStart="5dp"

                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp">
                        <ImageView
                            android:id="@+id/place"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_location_on_black_24dp"

                            />
                        <LinearLayout
                            android:id="@+id/centerRatingStar"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginEnd="7dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="7dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_stars"

                                />
                            <!--<RatingBar
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:id="@+id/service_rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:rating="1"
                                android:clickable="false"
                                android:numStars="1" />-->

                        </LinearLayout>
                        <TextView
                            android:gravity="start|center"
                            android:id="@+id/provider_rate"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="0.0"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/doctorName"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#a5587a"
                        android:layout_height="@dimen/high_edit_text" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_marginStart="5dp"

                        android:id="@+id/doctor_rateLayout"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginEnd="7dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="7dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_stars"

                                />
                            <!--<RatingBar
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:id="@+id/service_rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:rating="1"
                                android:clickable="false"
                                android:numStars="1" />-->

                        </LinearLayout>
                        <TextView
                            android:gravity="start|center"
                            android:id="@+id/doctor_rate"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="0.0"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/total_price"
                        android:layout_width="match_parent"
                        android:text="Price"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#d83269"
                        android:layout_height="@dimen/high_edit_text" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/patientName"
                        android:layout_width="match_parent"
                        android:text="patients"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:layout_height="@dimen/high_edit_text" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:id="@+id/booking_place"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Place"
                        android:textColor="#133277"
                        android:textSize="16dp"
                        />



                </LinearLayout>
                <TextView
                    android:id="@+id/bdb_expected_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="الموعد تحت التعديل"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/is_shifted"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="تمت ازاحة الموعد بمقدار نصف ساعة"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_weight="2"
                android:id="@+id/reference_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/high_edit_text"
                android:text=""
                android:gravity="center"
                android:textSize="16dp"
                />

            <ImageView
                android:id="@+id/isCheckedIn"
                android:layout_width="@dimen/standard_40"
                android:layout_height="match_parent"
                />

            <TextView
                android:layout_weight="2"
                android:id="@+id/book_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/high_edit_text"
                android:gravity="center"
                android:text=""
                android:textSize="16dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/refundText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="يمكنك استرجاع 0 ريال خلال 0 يوم و 0 ساعة"
            android:textColor="@color/pf_red"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/actions"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/automated_browse_btns_back"
            android:id="@+id/time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="@string/edit"
            android:textColor="#fff"
            android:textSize="16dp"
            android:gravity="center"
            />
        <Space
            android:layout_width="5dp"
            android:id="@+id/space"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/delay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/automated_browse_btns_back"
            android:gravity="center"
            android:text="Check in"
            android:textColor="#fff"
            android:textSize="16dp"
            />

        <Space
            android:layout_width="5dp"
            android:id="@+id/space2"
            android:layout_height="match_parent" />
        <TextView
            android:background="@drawable/automated_browse_btns_back"
            android:id="@+id/refuse"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="16dp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="6"

        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
