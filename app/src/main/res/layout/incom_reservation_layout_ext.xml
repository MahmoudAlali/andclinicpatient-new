<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="20dp"
        android:gravity="center"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/requestItemBack"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/requestItemBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/book_details"
                android:padding="3dp"
                android:layout_width="@dimen/standard_50"
                android:layout_height="match_parent"
                android:src="@drawable/res_info"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/booktype"
                android:layout_width="match_parent"
                android:text="Booking type"
                android:lines="1"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_height="@dimen/standard_45" />



        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:text="Start Date"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_height="@dimen/high_edit_text" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                >
<!--                <android.support.v7.widget.CarView-->
<!--                    android:id="@+id/myCardView"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:cardCornerRadius="50dp"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    >-->
                    <ImageView
                        android:id="@+id/logoImg"
                        android:src="@drawable/clientlogo"
                        android:layout_width="@dimen/standard_30"
                        android:layout_height="@dimen/standard_30"
                        android:scaleType="centerCrop"
                        />
<!--                </android.support.v7.widget.CarView>-->


            </LinearLayout>

            <TextView
            android:id="@+id/client_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#a5587a"
            android:layout_height="@dimen/high_edit_text" />
            <ImageView
                android:id="@+id/place"
                android:textColor="#9a7084"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_width="@dimen/standard_40"
                android:layout_height="@dimen/standard_30"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/total_price"
                        android:layout_width="match_parent"
                        android:text="Price"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#d83269"
                        android:layout_height="@dimen/high_edit_text" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:id="@+id/booking_place"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Place"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/inner_res"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:textColor="#9a7084" />

                    <TextView
                        android:id="@+id/bdb_expected_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high_edit_text"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/deposit"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <hyogeun.github.com.colorratingbarlib.ColorRatingBar
            android:id="@+id/rating"
            android:layout_width="240dp"
            android:layout_height="@dimen/standard_40"
            android:numStars="5"
            android:layout_gravity="center"
            app:progress_color="#FFD700"
            app:empty_color="@color/gray"
            android:scaleX="0.5"
            android:scaleY="0.5"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/high_edit_text"
                android:gravity="center"
                android:text="@string/reference_number"
                android:textSize="18dp" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/reference_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/high_edit_text"
                android:text=""
                android:gravity="center"
                android:textSize="18dp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/high_edit_text"
                android:gravity="center"
                android:text="@string/book_id"
                android:textSize="18dp"
                />
            <TextView
                android:layout_weight="2"
                android:id="@+id/book_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/high_edit_text"
                android:gravity="center"
                android:text=""
                android:textSize="18dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#E4C8FB"
            android:id="@+id/time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_edit_text"
            android:text="@string/edit"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/delay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E4C8FB"
            android:gravity="center"
            android:text="@string/Delay"
            android:textColor="#fff"
            android:textSize="20dp" />

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#E4C8FB"
            android:id="@+id/refuse"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="6"

        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
