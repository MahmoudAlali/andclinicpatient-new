<!--            android:gravity="center"-->
<!--            />-->
    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/myroot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>
