<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Fragments.RateSerEmpActivity">
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_marginBottom="65dp"
      android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/provider_rate_txt"
              android:layout_margin="@dimen/pf_10_txt_size"
              android:layout_width="match_parent"
              android:layout_height="35dp"
              android:background="@color/transLightPink"
              android:text="@string/Provider_Eval"
              android:textSize="16dp"
              android:textColor="@color/lightBordeaux"
              android:textStyle="bold"
              android:gravity="center" />
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:id="@+id/provider_rate_layout"
                  android:layout_margin="@dimen/pf_10_txt_size"
                  android:layout_width="350dp"
                  android:layout_gravity="center"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  >
                  <TextView
                      android:visibility="gone"
                      android:layout_weight="1"
                      android:id="@+id/sup_name"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:lines="1"
                      android:gravity="center"
                      android:textStyle="bold"

                      android:textSize="16dp"
                      android:text="@string/salon_provider_name"
                      />
                  <hyogeun.github.com.colorratingbarlib.ColorRatingBar
                      android:id="@+id/sup_rating"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:scaleY="0.5"
                      android:scaleX="0.5"
                      android:numStars="5"
                      app:progress_color="#FFD700"
                      app:empty_color="@color/gray"
                      android:layout_gravity="end"
                      />
              </LinearLayout>


              <EditText
                  android:id="@+id/reason"
                  android:layout_margin="@dimen/pf_10_txt_size"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:background="@drawable/border_edit_text"
                  android:textColor="@color/lightBordeaux"
                  android:hint="@string/reason_"
                  android:textSize="16dp"
                  android:textStyle="bold"
                  android:gravity="center" />
              <TextView
                  android:layout_margin="@dimen/pf_10_txt_size"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:background="@color/transLightPink"
                  android:textColor="@color/lightBordeaux"
                  android:text="@string/employee_evaluation"
                  android:textSize="16dp"
                  android:textStyle="bold"
                  android:gravity="center" />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/itemBackground"
              android:layout_marginLeft="@dimen/standard_20"
              android:layout_marginRight="@dimen/standard_20"
              android:background="@drawable/favorite_cell"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:layout_marginBottom="10dp"
              android:orientation="horizontal"
              android:weightSum="5">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="3"
                  android:layout_marginBottom="10dp"
                  android:paddingStart="10dp"
                  android:layoutDirection="ltr"
                  android:paddingLeft="10dp">

                  <LinearLayout
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/standard_60">
                      <android.support.v7.widget.CardView
                          android:visibility="gone"
                          android:id="@+id/myCardView"
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          app:cardCornerRadius="50dp"
                          android:layout_gravity="center"
                          android:layout_centerHorizontal="true"
                          android:layout_centerVertical="true"
                          >
                          <ImageView
                              android:id="@+id/logoImg"
                              android:src="@drawable/logo"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:scaleType="centerCrop"
                              />
                      </android.support.v7.widget.CardView>
                      <TextView
                          android:id="@+id/service_name"
                          android:layout_weight="1"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:text="@string/patient_name"
                          android:gravity="center"
                          android:textStyle="bold"
                          android:textSize="16dp"
                          android:textColor="@color/red"
                          />

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingStart="@dimen/standard_20"
                      android:orientation="horizontal"
                      android:paddingLeft="@dimen/standard_20">
                      <TextView
                          android:id="@+id/employee_name"
                          android:textSize="12dp"
                          android:textColor="#000"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:text="@string/doctorName"
                          android:gravity="center"
                          />
                      <hyogeun.github.com.colorratingbarlib.ColorRatingBar

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:scaleY="0.5"
                          android:scaleX="0.5"
                          android:id="@+id/rating"
                          android:numStars="5"
                          app:progress_color="#FFD700"
                          app:empty_color="@color/gray"
                          android:layout_gravity="end"
                          />
                  </LinearLayout>


                  <!--  <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Salon Name"
                        android:id="@+id/pro_name"
                        android:layout_weight="1"
                        android:textSize="@dimen/standard_20"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/is_fav"
                        android:src="@drawable/favorite"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="@dimen/standard_20"
                        android:layout_marginRight="@dimen/standard_20" />-->
              </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:id="@+id/myroot"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
      </LinearLayout>

  </android.support.v4.widget.NestedScrollView>
    <Button
        android:id="@+id/eval"
        android:layout_gravity="bottom|center"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:text="@string/evaluate"
        android:background="@drawable/evaluate"
        android:layout_height="@dimen/standard_40"/>
</android.support.design.widget.CoordinatorLayout>