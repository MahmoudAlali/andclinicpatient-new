        <!--</android.support.v7.widget.Toolbar>-->
        <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/end_gray"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredBackArrow"
        app:title=""
        app:titleMarginStart="@dimen/standard_175"
        app:titleTextColor="@color/end_gray" />
   <android.support.design.bottomappbar.BottomAppBar
       android:layout_marginTop="?attr/actionBarSize"
       android:layout_width="match_parent"
       android:backgroundTint="@color/end_gray"
       android:layout_height="?attr/actionBarSize">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/servicetabclick"
               android:layout_weight="1"
               android:textSize="18dp"
               android:gravity="center"
               android:textColor="#000"
               android:text="مقدمات الخدمة"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />

           <TextView
               android:textColor="#000"

               android:id="@+id/offertabclick"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:text="أبرز العروض"
               android:textSize="18dp" />
           <TextView
               android:textColor="#000"

               android:id="@+id/maptabclick"
               android:layout_weight="1"
               android:textSize="18dp"
               android:gravity="center"
               android:text="الخريطة"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
       </LinearLayout>
   </android.support.design.bottomappbar.BottomAppBar>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

