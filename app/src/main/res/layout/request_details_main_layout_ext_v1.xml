<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"

        android:background="#fff"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/rname"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="17sp"
                    android:text="Reservation 1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    />
                <ImageView
                    android:id="@+id/categoryImg"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:text="ID"
                    android:src="@drawable/hair_basic"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/time"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:src="@drawable/start_at_icon"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/end_time"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:src="@drawable/end_at_icon"/>
                <TextView
                    android:id="@+id/end_time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text="@string/ordered_at"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/standard_30"
                    android:layout_height="@dimen/standard_30"
                    android:src="@drawable/booked_at_icon"/>
                <TextView
                    android:id="@+id/book_at"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/emp_name_icon"/>
                <TextView
                    android:id="@+id/emp_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high_edit_text"
                    android:text=""
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="@string/estimated_cost" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/reser_money_icon"/>
                <TextView
                    android:id="@+id/cost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ac_price_lay"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/actual_price" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/reser_money_icon"/>
                <TextView
                    android:id="@+id/actual_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>
            <!--            <LinearLayout-->
            <!--                android:layout_marginBottom="20dp"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content">-->
