            <!--                &lt;!&ndash;                    android:src="@drawable/reser_money_icon"/>&ndash;&gt;-->
            <!--                <TextView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:gravity="center"-->
            <!--                    android:text="كلفة المشوار:" />-->
            <!--                <TextView-->
            <!--                    android:id="@+id/price_j_cost"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:gravity="center"-->
            <!--                    android:text="" />-->

            <!--            </LinearLayout>-->
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/journey_time" />
                <!--                <ImageView-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    android:src="@drawable/reser_money_icon"/>-->
                <TextView
                    android:id="@+id/journey_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>


        </LinearLayout>

